<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_view_blog" tools:context="com.eazyedu.blog.ViewBlog">

    <ProgressBar
        android:id="@+id/blogProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/txtView_blog"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_above="@+id/blog_banner"
        android:scrollbars = "vertical"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/blog_banner"
        android:src="@drawable/eazyedu_blog_icon"
        android:requiresFadingEdge="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp" />



</RelativeLayout>
