        android:layout_below="@+id/main_img"
        android:layout_marginEnd="209dp" />

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="@string/heading" android:paddingTop="220dp"
        android:textColor="#14368D" android:textAllCaps="false" android:textAlignment="center"
        android:textStyle="italic|bold" android:id="@+id/welcome_text" android:textSize="25dp"
        android:layout_alignParentRight="@+id/icon_img"/>

    <View
        android:layout_width="fill_parent"
        android:id="@+id/horizontal_div"
        android:layout_height="1dip"
        android:background="#000000"
        android:layout_below="@+id/icon_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/label_text1"
        android:id="@+id/text_label"
        android:layout_centerVertical="true"
        android:layout_below="@+id/horizontal_div"
        android:layout_alignParentStart="true"
        android:layout_marginStart="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
